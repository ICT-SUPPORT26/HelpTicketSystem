# ------------------------------
# MoveSMS Configuration for SMS Notifications
# Get these from your MoveSMS account dashboard: https://movesms.co.ke/
# ------------------------------

MOVESMS_USERNAME=your_movesms_username
MOVESMS_APIKEY=your_movesms_api_key
MOVESMS_SENDER_ID=HELPDESK
# Optional custom API endpoint (default is the one below)
# MOVESMS_BASE_URL=https://sms.movesms.co.ke/api/compose

# ------------------------------
# Database Configuration
# ------------------------------
# For Render: set DATABASE_URL in Render Dashboard
# For local development: uncomment and fill your local DB credentials
# Example for MySQL local fallback:
# DATABASE_URL=mysql+pymysql://root:@localhost:3306/helpticket_system
DATABASE_URL=

# ------------------------------
# Mail Configuration (for email notifications)
# ------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=helpticketsystem@outlook.com

# ------------------------------
# Flask App Configuration
# ------------------------------
FLASK_ENV=development
DEBUG=False
SESSION_SECRET=your-secret-key-change-this-in-production
