# MoveSMS Configuration for SMS Notifications
# Get these from your MoveSMS account dashboard: https://movesms.co.ke/

# Your MoveSMS account username
MOVESMS_USERNAME=your_movesms_username

# Your MoveSMS API key
MOVESMS_APIKEY=your_movesms_api_key

# Sender ID that appears on recipient's phone (max 11 chars, alphanumeric)
# Default: HELPDESK
MOVESMS_SENDER_ID=HELPDESK

# (Optional) MoveSMS API endpoint
# Default: https://sms.movesms.co.ke/api/compose
# MOVESMS_BASE_URL=https://sms.movesms.co.ke/api/compose

# Database URL (if using MySQL/PostgreSQL instead of SQLite)
# Format: postgresql://user:password@localhost/dbname
# or: mysql+pymysql://user:password@localhost/dbname
# DATABASE_URL=

# Alternatively you can specify DB components (app will build URL):
# DB_ENGINE=postgres        # "postgres"/"postgresql" or "mysql"
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=127.0.0.1
# DB_PORT=5432              # 3306 for MySQL
# DB_NAME=helpticket_system

# Mail Configuration (for email notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Flask Configuration
FLASK_ENV=development
DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production
