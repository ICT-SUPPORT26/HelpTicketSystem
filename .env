# ==============================
# .env for Local Development
# ==============================

# ------------------------------
# MoveSMS Configuration
# ------------------------------
MOVESMS_USERNAME=your_username_here
MOVESMS_APIKEY=your_api_key_here
MOVESMS_SENDER_ID=HELPTICKET
# Optional custom API endpoint
# MOVESMS_BASE_URL=https://sms.movesms.co.ke/api/compose

# ------------------------------
# Database Configuration
# ------------------------------
# Local MySQL fallback (matches app.py dual-mode)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/helpticket_system

# ------------------------------
# Mail Configuration (for email notifications)
# ------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=helpticketsystem@outlook.com

# ------------------------------
# Flask App Configuration
# ------------------------------
SESSION_SECRET=your_secret_key_here
FLASK_ENV=development
DEBUG=True
