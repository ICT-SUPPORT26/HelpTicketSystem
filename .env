# ==========================
# MoveSMS Configuration
# ==========================
# Your MoveSMS account username
MOVESMS_USERNAME=your_movesms_username_here

# Your MoveSMS API key
MOVESMS_APIKEY=your_api_key_here

# Sender ID that appears on recipient's phone (max 11 chars, alphanumeric)
MOVESMS_SENDER_ID=HELPTICKET

# Optional: custom API endpoint (usually not needed)
# MOVESMS_BASE_URL=https://sms.movesms.co.ke/api/compose

# ==========================
# Database Configuration
# ==========================
# Example MySQL database URL for Render
# Format: mysql+pymysql://username:password@host:port/dbname
DATABASE_URL=mysql+pymysql://db_user:db_password@db_host:3306/helpticket_system

# ==========================
# Mail Configuration
# ==========================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_app_password_here
MAIL_DEFAULT_SENDER=helpticketsystem@outlook.com

# ==========================
# Flask Configuration
# ==========================
FLASK_ENV=production
DEBUG=False
SESSION_SECRET=supersecretkey_change_this

# ==========================
# Optional Upload Settings
# ==========================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

